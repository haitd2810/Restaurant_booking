        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Table</th>
                            <th>Payed</th>
                            <th>CreateAt</th>
                            <th>UpdateAt</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model.Bills)
                        {
                            <tr>
                                <td>@i.Id</td>
                                <td>@i.Table.Id</td>
                                <td>@i.Payed</td>
                                <td>@i.CreateDate</td>
                                <td>@i.UpdateDate</td>
                                <td>@i.Status</td>
                                <td>
                                    <a class="nav-link text-dark" asp-page="/Admin/bill/Detail" asp-route-id="@(i.Id)">Detail</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <ul class="pagination">
                    <!-- Nút Previous -->
                    <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                        <a class="page-link" asp-page="billManage"
                           asp-route-pageIndex="@(Model.CurrentPage - 1)"
                        >Previous</a>
                    </li>

                    <!-- Tạo danh sách số trang -->
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                            <a class="page-link" asp-page="billManage"
                           asp-route-pageIndex="@(i)
                         ">@i</a>
                        </li>
                    }

                    <!-- Nút Next -->
                    <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-page="billManage"
                           asp-route-pageIndex="@(Model.CurrentPage + 1)">Next</a>
                    </li>
                </ul>


            </div>
        </div>
    </div>
</div>
