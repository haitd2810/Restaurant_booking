            if(role === "All"){
                document.getElementById("employeeOptions").style.display = "none";
            }else
            document.getElementById("employeeOptions").style.display = "flex";
        }

        function handleCategoryChange() {
            // Show the dish dropdown based on category selection
            document.getElementById("dishOptions").style.display = "flex";
        }
    </script>
    <script>
        // Lấy dữ liệu từ ViewData đã được serialize từ backend
        const dataFromServer = @Html.Raw(ViewData["dailyData"]);
        console.log(dataFromServer);

        const labels = [];
        const originalData = [];
        const soldData = [];
        const today = new Date();

        // Vòng lặp để thêm dữ liệu trong 7 ngày gần đây
        for (let i = -6; i <= 0; i++) {
            const currentDate = new Date(today);
            currentDate.setDate(today.getDate() + i); // Điều chỉnh ngày trong 7 ngày

            // Định dạng ngày theo kiểu dd/MM/yyyy
            const formattedDate = `${('0' + currentDate.getDate()).slice(-2)}/${('0' + (currentDate.getMonth() + 1)).slice(-2)}/${currentDate.getFullYear()}`;
            labels.push(formattedDate); // Thêm ngày vào danh sách

            // In ra ngày đã định dạng để kiểm tra
            console.log("Ngày đã định dạng:", formattedDate);

            // Kiểm tra xem ngày này có tồn tại trong dữ liệu từ server không
            if (dataFromServer && dataFromServer[formattedDate]) {
                const dayData = dataFromServer[formattedDate];

                // Kiểm tra xem dữ liệu có hợp lệ không
                if (dayData.Item1 !== undefined && dayData.Item2 !== undefined) {
                    const original = typeof dayData.Item1 === 'number' ? dayData.Item1 : 0;
                    const sell = typeof dayData.Item2 === 'number' ? dayData.Item2 : 0;

                    originalData.push(original);
                    soldData.push(sell);

                    console.log(`Dữ liệu cho ${formattedDate}: Original = ${original}, Sell = ${sell}`);
                } else {
                    // Nếu dữ liệu không hợp lệ
                    originalData.push(0);
                    soldData.push(0);
                    console.log("Dữ liệu không hợp lệ cho " + formattedDate);
                }
            } else {
                // Nếu không có dữ liệu cho ngày này
                originalData.push(0);
                soldData.push(0);
                console.log("Không có dữ liệu cho " + formattedDate);
            }
        }

        // Kiểm tra lại mảng dữ liệu sau khi thêm
        console.log("Dữ liệu Original:", originalData);
        console.log("Dữ liệu Sell:", soldData);

        // Chart.js cho phần báo cáo
        const ctxReports = document.getElementById('reportsChart').getContext('2d');
        const reportsChart = new Chart(ctxReports, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Original Price',
                        data: originalData,
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 2,
                        fill: false
                    },
                    {
                        label: 'Sold Price',
                        data: soldData,
                        borderColor: 'rgba(255, 99, 132, 1)',
                        borderWidth: 2,
                        fill: false
                    }
                ]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: false
                    }
                }
            }
        });
    </script>




